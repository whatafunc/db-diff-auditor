{
    "name": "whatafunc/db-diff-auditor",
    "description": "Database change auditor for AI-assisted development",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.0 || ^8.0"
    },
    "require-dev": {
        "symfony/console": "^5.4",
        "vlucas/phpdotenv": "^5.6",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "DbDiffAuditor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DbDiffAuditor\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "db-diff": "db-diff",
        "test": "phpunit"
    },
    "bin": ["bin/db-diff"]
}
